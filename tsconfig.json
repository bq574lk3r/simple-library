{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "outDir": "dist",
    "baseUrl": "src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,  
    "typeRoots": ["./environment.d.ts", "./node_modules/@types"]                      
  },
  "include": [
    "src",
    "./environment.d.ts"
  ],
  "exclude": [
    "node_modules",
    "**/test",
    "**/*.test.ts",
    "**/TestHelpers.ts"
  ]
}